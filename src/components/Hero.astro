<section class="hero">
  <div class="hero-content">
    <h1 class="hero-title">Welcome to RoughNotes</h1>
    <p class="hero-subtitle">
      A sanctuary for stories and poems where words come alive and emotions find their voice
    </p>
    <div class="hero-actions">
      <a href="/stories" class="btn btn-primary">Explore Stories</a>
      <a href="/poems" class="btn btn-secondary">Read Poems</a>
    </div>
  </div>
</section>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0 6rem;
    background: linear-gradient(135deg, var(--background-color) 0%, #F0E6D6 100%);
    border-radius: 1rem;
    margin-bottom: 4rem;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.5;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-family: var(--font-sans);
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
  }

  .btn-primary:hover {
    background: #A0522D;
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: var(--card-background);
    color: var(--accent-color);
    border: 2px solid var(--accent-color);
  }

  .btn-secondary:hover {
    background: var(--accent-color);
    color: white;
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem 4rem;
    }
    
    .hero-title {
      font-size: 2.25rem;
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>