---
export interface Props {
  username?: string;
  size?: 'small' | 'medium' | 'large';
  variant?: 'primary' | 'secondary' | 'coffee';
  message?: string;
}

const { 
  username = "roughnotes", 
  size = "medium",
  variant = "coffee",
  message = "Buy me a coffee"
} = Astro.props;
---

<div class="buy-me-coffee">
  <a 
    href={`https://www.buymeacoffee.com/${username}`}
    target="_blank"
    rel="noopener noreferrer"
    class={`coffee-btn coffee-btn--${size} coffee-btn--${variant}`}
  >
    <div class="coffee-icon">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18.5 7h-.79l-.28-.27C16.1 5.33 15.09 5 14 5H6c-1.66 0-3 1.34-3 3v8c0 1.66 1.34 3 3 3h8c1.66 0 3-1.34 3-3v-2h1.5c1.38 0 2.5-1.12 2.5-2.5S19.88 7 18.5 7zM15 16c0 .55-.45 1-1 1H6c-.55 0-1-.45-1-1V8c0-.55.45-1 1-1h8c.55 0 1 .45 1 1v8zm3.5-4H17v-1h1.5c.28 0 .5.22.5.5s-.22.5-.5.5z" fill="currentColor"/>
        <circle cx="8" cy="10" r="1" fill="currentColor"/>
        <circle cx="12" cy="10" r="1" fill="currentColor"/>
        <path d="M7 13h6v1H7z" fill="currentColor"/>
      </svg>
    </div>
    <span class="coffee-text">{message}</span>
    <div class="coffee-steam">
      <div class="steam steam-1"></div>
      <div class="steam steam-2"></div>
      <div class="steam steam-3"></div>
    </div>
  </a>
</div>

<style>
  .buy-me-coffee {
    display: inline-block;
  }

  .coffee-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    border-radius: 12px;
    font-family: var(--font-sans);
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.1);
    border: none;
    cursor: pointer;
    overflow: hidden;
    letter-spacing: 0.025em;
  }

  .coffee-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .coffee-btn:hover::before {
    transform: translateX(100%);
  }

  .coffee-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(0, 0, 0, 0.15);
  }

  .coffee-btn:active {
    transform: translateY(0);
    transition: transform 0.1s;
  }

  .coffee-icon {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
  }

  .coffee-icon svg {
    width: 100%;
    height: 100%;
    flex-shrink: 0;
  }

  .coffee-text {
    position: relative;
    z-index: 1;
    white-space: nowrap;
    font-weight: 600;
  }

  .coffee-steam {
    position: relative;
    z-index: 1;
    display: flex;
    gap: 2px;
    align-items: flex-end;
    height: 16px;
    opacity: 0.7;
  }

  .steam {
    width: 2px;
    background: currentColor;
    border-radius: 1px;
    animation: steam 2s ease-in-out infinite;
  }

  .steam-1 {
    height: 8px;
    animation-delay: 0s;
  }

  .steam-2 {
    height: 12px;
    animation-delay: 0.3s;
  }

  .steam-3 {
    height: 6px;
    animation-delay: 0.6s;
  }

  @keyframes steam {
    0%, 100% {
      transform: scaleY(1);
      opacity: 0.7;
    }
    50% {
      transform: scaleY(1.5);
      opacity: 1;
    }
  }

  /* Size variants */
  .coffee-btn--small {
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    gap: 0.5rem;
  }

  .coffee-btn--small .coffee-icon {
    width: 20px;
    height: 20px;
    padding: 3px;
  }

  .coffee-btn--medium {
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    gap: 0.75rem;
  }

  .coffee-btn--medium .coffee-icon {
    width: 24px;
    height: 24px;
    padding: 4px;
  }

  .coffee-btn--large {
    padding: 1.125rem 2.25rem;
    font-size: 1.125rem;
    gap: 1rem;
  }

  .coffee-btn--large .coffee-icon {
    width: 28px;
    height: 28px;
    padding: 4px;
  }

  /* Variant styles */
  .coffee-btn--primary {
    background: linear-gradient(135deg, var(--accent-color) 0%, #A0522D 100%);
    color: white;
  }

  .coffee-btn--primary:hover {
    background: linear-gradient(135deg, #A0522D 0%, var(--accent-color) 100%);
    color: white;
  }

  .coffee-btn--secondary {
    background: linear-gradient(135deg, var(--card-background) 0%, #F8F5F0 100%);
    color: var(--accent-color);
    border: 2px solid var(--accent-color);
  }

  .coffee-btn--secondary:hover {
    background: linear-gradient(135deg, var(--accent-color) 0%, #A0522D 100%);
    color: white;
    border-color: transparent;
  }

  .coffee-btn--coffee {
    background: linear-gradient(135deg, #D2691E 0%, #8B4513 100%);
    color: white;
  }

  .coffee-btn--coffee:hover {
    background: linear-gradient(135deg, #CD853F 0%, #A0522D 100%);
    color: white;
  }

  .coffee-btn--coffee .coffee-icon {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .coffee-btn--large {
      padding: 1rem 2rem;
      font-size: 1rem;
    }
    
    .coffee-btn--medium {
      padding: 0.75rem 1.5rem;
      font-size: 0.9rem;
    }
    
    .coffee-btn--small {
      padding: 0.625rem 1.25rem;
      font-size: 0.8rem;
    }

    .coffee-btn--large .coffee-icon {
      width: 24px;
      height: 24px;
    }
    
    .coffee-btn--medium .coffee-icon {
      width: 20px;
      height: 20px;
    }
  }

  /* Accessibility */
  .coffee-btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.3);
  }

  @media (prefers-reduced-motion: reduce) {
    .coffee-btn {
      transition: none;
    }
    
    .steam {
      animation: none;
    }
    
    .coffee-btn::before {
      display: none;
    }
  }
</style>