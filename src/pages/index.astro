---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContentCard from '../components/ContentCard.astro';
import Newsletter from '../components/Newsletter.astro';
import BuyMeCoffee from '../components/BuyMeCoffee.astro';
import { getFeaturedContent } from '../lib/supabase';

const featuredContent = await getFeaturedContent();
---

<Layout title="RoughNotes - Stories and Poems">
  <Hero />
  
  <section class="featured-section">
    <h2 class="section-title">Featured Writing</h2>
    <div class="content-grid">
      {featuredContent.map((content) => (
        <ContentCard
          title={content.title}
          excerpt={content.excerpt}
          date={new Date(content.created_at).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
          type={content.type}
          slug={content.slug}
        />
      ))}
    </div>
  </section>
  
  <Newsletter />
  
  <section class="support-section">
    <div class="support-content">
      <h2>Support My Writing</h2>
      <p>
        If you enjoy reading my stories and poems, consider supporting my work. 
        Your support helps me continue creating and sharing these literary pieces with the world.
      </p>
      <div class="support-actions">
        <BuyMeCoffee 
          username="roughnotes" 
          size="large" 
          theme="orange" 
          message="Buy me a coffee â˜•"
        />
      </div>
    </div>
  </section>
  
  <section class="about-preview">
    <div class="about-content">
      <h2>About the Writer</h2>
      <p>
        Welcome to my literary corner of the internet. Here, I share the stories that live in my imagination 
        and the poems that flow from my heart. Each piece is a window into different worlds, emotions, and experiences.
      </p>
      <a href="/about" class="btn btn-secondary">Learn More</a>
    </div>
  </section>
</Layout>

<style>
  .featured-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--primary-color);
    text-align: center;
    margin-bottom: 3rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .support-section {
    background: linear-gradient(135deg, var(--secondary-color) 0%, #E6D3B7 100%);
    border-radius: 1rem;
    padding: 3rem;
    text-align: center;
    margin-bottom: 4rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-color);
  }

  .support-content h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .support-content p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .support-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .about-preview {
    background: var(--card-background);
    border-radius: 1rem;
    padding: 3rem;
    text-align: center;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-color);
  }

  .about-content h2 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
  }

  .about-content p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
    
    .about-preview, .support-section {
      padding: 2rem 1rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .support-content h2 {
      font-size: 1.75rem;
    }
    
    .support-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>