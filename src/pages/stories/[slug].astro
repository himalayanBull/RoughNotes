---
import Layout from '../../layouts/Layout.astro';
import { getStories, getStoryBySlug, type Story } from '../../lib/supabase';

export async function getStaticPaths() {
  const stories = await getStories();
  return stories.map((story) => ({
    params: { slug: story.slug },
    props: { story },
  }));
}

interface Props {
  story: Story;
}

const { story } = Astro.props;

if (!story) {
  return Astro.redirect('/stories');
}
---

<Layout title={`${story.title} - RoughNotes`} description={story.excerpt}>
  <div class="story-banner">
    <img 
      src={story.banner_image || 'https://images.pexels.com/photos/1666021/pexels-photo-1666021.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'} 
      alt={story.title} 
      class="banner-image"
    />
    <div class="banner-overlay">
      <div class="banner-content">
        <div class="story-meta">
          <span class="story-type">Story</span>
          <time class="story-date">{new Date(story.created_at).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}</time>
        </div>
        <h1 class="story-title">{story.title}</h1>
        <p class="story-excerpt">{story.excerpt}</p>
      </div>
    </div>
  </div>

  <article class="story-article">
    <div class="story-content">
      {story.content.split('\n\n').map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    </div>
    
    <footer class="story-footer">
      <div class="story-navigation">
        <a href="/stories" class="nav-button">‚Üê Back to Stories</a>
        <a href="/" class="nav-button">Home</a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .story-banner {
    position: relative;
    height: 500px;
    border-radius: 1rem;
    overflow: hidden;
    margin-bottom: 3rem;
    box-shadow: var(--shadow-hover);
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(44, 24, 16, 0.8) 0%, rgba(139, 69, 19, 0.6) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .banner-content {
    text-align: center;
    color: white;
    max-width: 700px;
    padding: 0 2rem;
  }

  .story-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .story-type {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .story-date {
    color: rgba(255, 255, 255, 0.9);
    font-family: var(--font-sans);
    font-size: 0.875rem;
  }

  .story-title {
    font-size: 4rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    line-height: 1.2;
  }

  .story-excerpt {
    font-size: 1.5rem;
    font-style: italic;
    opacity: 0.95;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    line-height: 1.4;
  }

  .story-article {
    max-width: 800px;
    margin: 0 auto;
  }

  .story-content {
    background: var(--card-background);
    border-radius: 1rem;
    padding: 3rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-color);
    margin-bottom: 2rem;
  }

  .story-content p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .story-content p:last-child {
    margin-bottom: 0;
  }

  .story-footer {
    padding: 2rem 0;
  }

  .story-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--accent-color);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-family: var(--font-sans);
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
  }

  .nav-button:hover {
    background: #A0522D;
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .story-banner {
      height: 400px;
    }
    
    .story-title {
      font-size: 2.5rem;
    }
    
    .story-excerpt {
      font-size: 1.25rem;
    }
    
    .banner-content {
      padding: 0 1rem;
    }
    
    .story-content {
      padding: 2rem 1.5rem;
    }
    
    .story-content p {
      font-size: 1rem;
    }
    
    .story-navigation {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-button {
      width: 100%;
      text-align: center;
    }
  }
</style>